{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Updater",
            "runtimeArgs": [
                "--loader",
                "ts-node/esm"
            ],
            "args": [
                "${workspaceFolder}/scripts/update/index.ts",
                "${workspaceFolder}/vcpkg"
            ],
            "env": { 
                "TS_NODE_PROJECT": "${workspaceFolder}/scripts/update/tsconfig.json"
            }
        }
    ]
}
